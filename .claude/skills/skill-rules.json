{
  "frontend-dev-guidelines": {
    "fileTriggers": {
      "pathPatterns": [
        "app/**/*.tsx",
        "app/**/*.ts",
        "components/**/*.tsx"
      ],
      "keywords": [
        "component",
        "render",
        "useState",
        "useEffect",
        "className",
        "styling",
        "layout",
        "responsive",
        "page",
        "route",
        "fetch",
        "API",
        "props",
        "hook",
        "suspense",
        "loading"
      ]
    },
    "intentPatterns": [
      "create.*component",
      "build.*page",
      "add.*feature",
      "style.*component",
      "responsive.*design",
      "fetch.*data",
      "async.*component",
      "loading.*state",
      "error.*handling",
      "typescript.*component"
    ],
    "description": "Frontend development guidelines for Next.js with Tailwind CSS"
  }
}
